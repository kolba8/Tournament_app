<h2>Best teams</h2>
<table>
  <tr>
    <th>Rank</th>
    <th>Name</th>
    <th>City</th>
    <th>Games played</th>
    <th>Games won</th>
    <th>Win percentage</th>
  </tr>

  <% Result.all.order(points: :desc).order(sets_difference: :desc).each_with_index do |result,index| %>
    <tr>
      <td><%= index +1 %></td>
      <td><%= result.team.name %></td>
      <td><%= result.team.city %></td>
      <td><%= result.games_played %></td>
      <td><%= result.sets_won %></td>
      <td><%= result.sets_lost %></td>
      <td><%= result.sets_difference %></td>
      <td><%= result.points %></td>
      <td><%= link_to 'Show', team_path(result.team) %></td>
    </tr>
  <% end %>
</table>
