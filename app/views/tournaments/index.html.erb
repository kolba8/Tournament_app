<h1>All tournaments</h1>
<%= link_to "Create new tournament", new_tournament_path %>

<%= form_tag "/search", method: "get" do %>
  <%= label_tag :q, "Search for:" %>
  <%= text_field_tag :q, params[:q], placeholder: "Search for ..." %>
  <%= submit_tag "Search" %>
<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Start_date</th>
      <th>End_date</th>
    </tr>

    <% @tournaments.each do |tournament| %>

      <tr>
        <td><%= tournament.name %></td>
        <td><%= tournament.city %></td>
        <td><%= tournament.start_date %></td>
        <td><%= tournament.end_date %></td>
        <td><%= link_to 'Show', tournament_path(tournament) %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_tournament_path(tournament.id) %></td>
        <td><%= link_to 'Delete', tournament_path(tournament.id),
                                  method: :delete,
                                  data: {confirm: "Are you sure?"}%></td>
        <% end %>
      </tr>
    <% end %>
  </thead>

</table>
