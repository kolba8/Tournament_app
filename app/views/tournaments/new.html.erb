<h2>Add new tournament</h2>

<%= form_for :tournament, url: tournaments_path do |f| %>
<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :city %><br>
<%= f.text_area :city %>
</p>
<p>
<%= f.label :start_date %><br>
<%= f.date_select :start_date, :start_year=>2010,:end_year=>2020 %>
</p>
<p>
<%= f.label :end_date %><br>
<%= f.date_select :end_date, :start_year=>2010,:end_year=>2020 %>
</p>
<p>
<%= f.submit %>
</p>
<% end %>

<%= link_to "Go back", tournaments_path %>
